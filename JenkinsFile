pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t thebela-portfolio .'
                }
            }
        }

        stage('Stop Old Container') {
            steps {
                script {
                    sh 'docker stop thebela-portfolio || true'
                    sh 'docker rm thebela-portfolio || true'
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    sh 'docker run -d --name thebela-portfolio -p 80:80 thebela-portfolio'
                }
            }
        }
    }
}
